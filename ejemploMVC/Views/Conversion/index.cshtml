@model ejemploMVC.Models.conversion
@{
    ViewBag.Title = "index";
}

<h2>Conversiones de la temperatura</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <div class="text-header">Conversion temperatura</div>
                    </div>
                    <div class="card-body">
                        <br /><br />
                        <div class=" form-group ">
                            @Html.LabelFor(Model => Model.temperatura, new { @class = "control-label" })
                            @Html.TextBoxFor(Model => Model.temperatura, new { @class = "form-control", type = "number", step = "0.01", required = "true" })
                        </div>
                        <br />
                        <div class="form-group">
                            <select class="form-control" name="opcion">
                                <option value="0" selected>Seleccione una conversion</option>
                                <option value="1">De celsius (ºC) a kelvin (K)</option>
                                <option value="2">De kelvin (K) a celsius (ºC)</option>
                            </select>
                        </div>
                        <div class="form-group mb-5">
                            <input type="submit" value="Calcular" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.resultado != null){
    <span>Resultado: &nbsp;@ViewBag.resultado</span>
}
