@model ejemploMVC.Models.calculo
@{
    ViewBag.Title = "index";
}

<h2>Operaciones</h2>

@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <select class="form-control" name="opcion">
            <option value="0" selected>Seleccione una operacion</option>
            <option value="1">Sumar</option>
            <option value="2">Restar</option>
            <option value="3">Multiplicar</option>
            <option value="4">Dividir</option>
        </select>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(Model => Model.numero1, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.numero1, new { @class = "form-control", type = "number", required = "true" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(Model => Model.numero2, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.numero2, new { @class = "form-control", type = "number", required = "true" })
    </div>
    
    <div class="form-group mb-5">
        <input type="submit" value="Enviar" class="btn btn-success" />
    </div>
}

@if (ViewBag.resultado != null){
    <span>Resultado: &nbsp;@ViewBag.resultado</span>
}