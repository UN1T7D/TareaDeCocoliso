@model ejemploMVC.Models.promedio
@{
    ViewBag.Title = "index";
}

<h2>Promedio por alumno</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(Model => Model.nota1, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.nota1, new { @class = "form-control", type = "number", step = "0.01", min = "0", max = "10", required="true" })
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.nota2, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.nota2, new { @class = "form-control", type = "number", step = "0.01", min = "0", max = "10", required = "true" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(Model => Model.nota3, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.nota3, new { @class = "form-control", type = "number", step = "0.01", min = "0", max = "10", required = "true" })
    </div>

    <div class="form-group mb-5">
        <input type="submit" value="Calcular promedio" class="btn btn-success" />
    </div>
}

@if (ViewBag.resultado != null){
    <span>Resultado: &nbsp;@ViewBag.resultado</span>
    
}

